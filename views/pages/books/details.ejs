<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../layouts/head') %>  <!-- partial -->
    </head>

    <header>
        <%- include('../layouts/header') %>
    </header>
    <body>
        <main>
            <section>   
        
                <img src = <%= details.image %> >
                <div> 
                    <%= details.title %>
                </div>
                <div>
                    <%= details.author %>
                </div>
                <div>
                    <%= details.description %>
                </div>
                <div>
                    <li>ISBN: <%= details.isbn %></li>
                </div>
                <div>
                    <li>Bookshelf: <%= details.bookshelf %></li>
                </div>
                <section>
                <button id= "updateBtn"> update book</button>
                </section>
                
                <form action = "/books/<%= details.id %>?_method=delete" method="post">
                    <button id ="deleteBtn"> delete book</button>
                </form>
                
                <!--updateBtn form-->
                <div id = "updateContent" class = "updateMsg">
                    <span class="close">&times;</span>
                    <%- include('edits.ejs')%>
                </div>


            </section>
            
        </main>
        <script>
            var updateBtn = document.getElementById("updateBtn")
            var updateContent = document.getElementById('updateContent')
            var span = document.getElementsByClassName("close")[0];
            
            updateBtn.onclick = function() {
                updateContent.style.display = "block"
                event.preventDefault()
            }

            span.onclick = function() {
                updateContent.style.display = "none";
            }

            window.onclick = function(event) {
                if (event.target == updateContent) {
                  updateContent.style.display = "none";
                }
              }
        </script>

    </body>
</html>